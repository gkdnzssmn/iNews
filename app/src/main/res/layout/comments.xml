<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="9dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardBackgroundColor="@color/purple"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:layout_margin="10dp"
            android:layout_below="@id/userImgCard"
            android:textColor="@color/white"
            android:text=""/>

        <androidx.cardview.widget.CardView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:cardElevation="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="12dp"
            android:id="@+id/userImgCard">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:id="@+id/comUserImg"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/userImgCard"
            android:layout_alignTop="@id/userImgCard"
            android:layout_alignBottom="@id/userImgCard"
            android:layout_marginStart="10dp"
            android:text=""
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:id="@+id/comUserName"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>